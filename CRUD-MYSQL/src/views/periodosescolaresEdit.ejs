<%- include ('partials/_header') %>

<div class="container mt-5">
    <div class="row">
      <div class="col-md-5 offset-md-3 card">
        <div class="card-body">
          <form action="periodosescolares/update/<%= data.id %>" method="POST">
            <div class="form-group">
              <input type="text" name="periodo" value="<%= data.periodo%>" placeholder="Periodo" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="ciclo" value="<%= data.ciclo%>" placeholder="Ciclo" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="nombreperiodo" value="<%= data.nombreperiodo%>" placeholder="Nombreperiodo" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">
              save Periodo
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  

<%- include ('partials/_footer') %>