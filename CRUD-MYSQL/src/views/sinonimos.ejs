<%- include ('partials/_header') %>
<div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>nยบ</td>
              <td>id</td>
              <td>id_concepto</td>
              <td>sinonimo</td>
              <td>observacion</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].id_concepto %></td>
                  <td><%= data[i].sinonimo %></td>
                  <td><%= data[i].observacion %></td>
                  <td>
                    <a href="sinonimos/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                    <a href="sinonimos/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
  
          <form action="sinonimos/add" method="POST">
            <div class="form-group">
              <input type="text" name="id_concepto" placeholder="Id_concepto" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="sinonimo" placeholder="Sinonimo" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="observacion" placeholder="Observacion" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">
              save Sinonimo
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include ('partials/_footer') %>