<%- include ('partials/_header') %>
<div class="container mt-5">
    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>nยบ</td>
              <td>id</td>
              <td>id_indicador</td>
              <td>id_periodo</td>
              <td>valor</td>
              <td>valortexto</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].id_indicador %></td>
                  <td><%= data[i].id_periodo %></td>
                  <td><%= data[i].valor %></td>
                  <td><%= data[i].valortexto %></td>
                  <td>
                    <a href="mediciones/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                    <a href="mediciones/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
  
          <form action="mediciones/add" method="POST">
            <div class="form-group">
              <input type="text" name="id_indicador" placeholder="id_indicador" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="id_periodo" placeholder="Id_periodo" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="valor" placeholder="Valor" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="valortexto" placeholder="Valortexto" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">
              save medicion
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include ('partials/_footer') %>