<%- include ('partials/_header') %>
<div class="container mt-5">
  <div>
  <input type="text" name="search" placeholder="Busqueda" class="form-control" autofocus>
  <button type="submit" class="btn btn-primary">
    Busqueda
  </button>
</div>
    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>nยบ</td>
              <td>id</td>
              <td>id_definicion</td>
              <td>id_tipoActivo</td>
              <td>descripcion</td>
              <td>url</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].id%></td>
                  <td><%= data[i].id_definicion %></td>
                  <td><%= data[i].id_tipoActivo %></td>
                  <td><%= data[i].descripcion %></td>
                  <td><%= data[i].url %></td>
                  <td>
                    <a href="/activos/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                    <a href="/activos/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
  
          <form action="/activos/add" method="POST">
            <div class="form-group">
              <input type="text" name="id_definicion" placeholder="IdDefinicion" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="id_tipoActivo" placeholder="IdTipoActivo" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="descripcion" placeholder="Descripcion" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="url" placeholder="Url" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">
              save Activo
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include ('partials/_footer') %>