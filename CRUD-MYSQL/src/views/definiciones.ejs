<%- include ('partials/_header') %>
<div class="container mt-5">
    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>nยบ</td>
              <td>id</td>
              <td>id_fuente</td>
              <td>id_concepto</td>
              <td>definicion</td>
              <td>fecha</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].id_fuente %></td>
                  <td><%= data[i].id_concepto %></td>
                  <td><%= data[i].definicion %></td>
                  <td><%= data[i].fecha %></td>
                  <td>
                    <a href="/definiciones/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                    <a href="/definiciones/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
  
          <form action="/definiciones/add" method="POST">
            <div class="form-group">
              <input type="text" name="id_fuente" placeholder="IdFuente" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="id_concepto" placeholder="IdConcepto" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="definicion" placeholder="Definicion" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="fecha" placeholder="Fecha" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">
              save Definicion
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include ('partials/_footer') %>