<%- include ('partials/_header') %>
<div class="container mt-5">
  <div class="input-group">
    <form action="/periodosescolares/search" method="GET">
      <div class="input-group">
        <input type="text" name="search" placeholder="Search periodo" class="form-control">
      <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
  </div>
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>nยบ</td>
              <td>id</td>
              <td>periodo</td>
              <td>ciclo</td>
              <td>nombreperiodo</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].periodo %></td>
                  <td><%= data[i].ciclo %></td>
                  <td><%= data[i].nombreperiodo %></td>
                  <td>
                    <a href="periodosescolares/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                    <a href="periodosescolares/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
  
          <form action="periodosescolares/add" method="POST">
            <div class="form-group">
              <input type="text" name="periodo" placeholder="Periodo" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="ciclo" placeholder="Ciclo" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="nombreperiodo" placeholder="Nombreperiodo" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">
              save periodo
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include ('partials/_footer') %>